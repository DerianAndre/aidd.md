{
  "permissions": {
    "allow": [
      "mcp__aidd-engine",
      "Bash(pnpm *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git stash *)",
      "Bash(git merge *)",
      "Bash(node *)",
      "Bash(npx *)"
    ],
    "deny": [
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(rm -rf *)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [{ "type": "command", "command": "node scripts/hooks/on-startup.cjs" }]
      },
      {
        "matcher": "resume|compact|clear",
        "hooks": [{ "type": "command", "command": "node scripts/hooks/on-resume.cjs" }]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [{ "type": "command", "command": "node scripts/hooks/on-pre-compact.cjs" }]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__aidd-engine__aidd_start",
        "hooks": [{ "type": "command", "command": "node scripts/hooks/on-session-init.cjs" }]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node .claude/statusline.js"
  }
}
